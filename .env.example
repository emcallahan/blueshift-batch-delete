# Blueshift API Configuration
# Copy this file to .env and fill in your credentials

# User API Key - used for customer management endpoints
# (e.g., delete customer, update customer, etc.)
BLUESHIFT_USER_API_KEY=your_user_api_key_here

# Event API Key - used for event tracking endpoints
# (e.g., track events, identify users, etc.)
BLUESHIFT_EVENT_API_KEY=your_event_api_key_here

# API Region - use either 'us' or 'eu'
BLUESHIFT_REGION=us

# Base URLs (auto-selected based on region)
# US: https://api.getblueshift.com
# EU: https://api.eu.getblueshift.com
